{
	"manifest_version": 2,
	"name": "__MSG_extensionName__",
	"short_name": "Bonjourr",
	"version": "1.9.0",
	"description": "__MSG_extensionDesc__",
	"author": "Victor Azevedo and Tahoe Beetschen",
	"default_locale": "en",

	"icons": {
		"128": "src/images/icons/chromeicon.png",
	    "120": "src/images/icons/favicon.png"
  	},

	"chrome_url_overrides" : {
		"newtab": "index.html"
	},

	"browser_action": {
		"title": "Bonjourr"
	},

	"offline_enabled": true,
	
	"background": {
		"persistent": false,
		"scripts": ["src/scripts/background.js"]
	},

	"permissions": [
		"storage",
		"unlimitedStorage",
		"geolocation"
	]
}