{
	"manifest_version": 3,
	"name": "__MSG_extensionName__",
	"short_name": "Bonjourr",
	"version": "19.2.4",
	"description": "__MSG_extensionDesc__",
	"author": "Victor Azevedo and Tahoe Beetschen",
	"homepage_url": "https://bonjourr.fr",
	"default_locale": "en",

	"icons": {
		"128": "src/assets/favicon-128x128.png",
		"512": "src/assets/favicon-512x512.png"
	},

	"chrome_settings_overrides": {
		"homepage": "index.html"
	},

	"chrome_url_overrides": {
		"newtab": "index.html"
	},

	"action": {
		"default_icon": {
			"128": "src/assets/favicon-128x128.png",
			"512": "src/assets/favicon-512x512.png"
		},
		"default_title": "__MSG_extensionName__"
	},

	"background": {
		"scripts": ["src/scripts/background.js"]
	},

	"permissions": ["storage"],
	"optional_permissions": ["bookmarks"],

	"browser_specific_settings": {
		"gecko": {
			"id": "{4f391a9e-8717-4ba6-a5b1-488a34931fcb}",
			"strict_min_version": "109.0"
		}
	}
}
